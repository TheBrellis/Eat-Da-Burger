<div>
    {{#if devour}}
    <div class="row m-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <p>{{id}}. {{burger_name}} </p>
                    <button type="submit" class="devour-burger" data-id="{{id}}">Devour It!</button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{#unless devour}}
    <div class="row text-muted">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <p>{{id}}. {{burger_name}} </p>
                </div>
            </div>
        </div>
    </div>
    {{/unless}}
</div>